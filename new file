<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Accordion with Table</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .table, .table td, .table th {
      border: none;
    }

    .accordion-collapse {
      display: none;
    }

    .accordion-collapse.show {
      display: table-row;
    }

    .accordion-header button {
      transition: transform 0.3s ease-in-out;
    }

    .accordion-header button.collapsed {
      transform: rotate(180deg);
    }

    .table td, .table th {
      padding-bottom: 1px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 100px;
    }

    .table td:hover, .table th:hover {
      overflow: visible;
      white-space: normal;
    }

    .table td, .table th {
      height: 50px;
    }
  </style>
</head>
<body>

<div class="accordion accordion-flush" id="accordionFlushExample">
  <table class="table" id="accordionTable">
    {% for item in accordion_data %}
    <tr class="accordion-header" id="flush-heading{{ forloop.counter }}">
      <td title="{{ item.dataA }}">{{ item.dataA }}</td>
      <td title="{{ item.dataB }}">{{ item.dataB }}</td>
      <td title="{{ item.dataC }}">{{ item.dataC }}</td>
      <td title="{{ item.dataD }}">{{ item.dataD }}</td>
      <td title="{{ item.dataE }}">{{ item.dataE }}</td>
      <td>
        <button class="btn btn-primary" type="button" onclick="toggleAccordion('collapse{{ forloop.counter }}', this)">
          +
        </button>
      </td>
    </tr>
    <!-- Additional rows will be added here -->
    {% endfor %}
  </table>
</div>

<script>
  const accordionData = {{ accordion_data|safe }};

  function toggleAccordion(collapseId, button) {
    const collapseElement = document.getElementById(collapseId);

    if (collapseElement) {
      collapseElement.classList.toggle('show');
      button.textContent = collapseElement.classList.contains('show') ? '-' : '+';
      return;
    }

    const index = parseInt(collapseId.replace('collapse', '')) - 1;
    const item = accordionData[index];
    const accordionTable = document.getElementById('accordionTable');
    const newRow = document.createElement('tr');
    newRow.id = collapseId;
    newRow.classList.add('accordion-collapse', 'show');
    newRow.innerHTML = `
      <td colspan="6">
        <table class="table">
          <tr>
            <td>${item.dataF}</td>
            <td>${item.dataG}</td>
            <td>${item.dataH}</td>
            <td>${item.dataI}</td>
            <td>${item.dataJ}</td>
          </tr>
        </table>
      </td>
    `;
    accordionTable.insertBefore(newRow, button.closest('tr').nextSibling);
    button.textContent = '-';
  }
</script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>