<!DOCTYPE html>
<html>
<head>
    <title>Hover Display Text</title>
</head>
<body>
    <div>
        {% for item in items %}
            {% with full_text="This is the concatenated text with the full content: " %}
                <span class="truncated-text" onmouseover="showFullText(event, '{{ item.text|escapejs }}')" onmouseout="hideFullText()">{{ full_text|safe }}{{ item.text|truncatechars:50 }}</span>
            {% endwith %}
        {% endfor %}
    </div>

    <!-- JavaScript code -->
    <script>
        function showFullText(event, text) {
            var tooltip = document.createElement("span");
            tooltip.textContent = text;

            tooltip.style.position = "fixed";
            tooltip.style.backgroundColor = "#555";
            tooltip.style.color = "#fff";
            tooltip.style.textAlign = "center";
            tooltip.style.borderRadius = "6px";
            tooltip.style.padding = "5px";
            tooltip.style.opacity = "0";
            tooltip.style.transition = "opacity 0.3s";

            var positionTop = event.pageY + 10; // Adjust the tooltip position as needed
            var positionLeft = event.pageX + 10; // Adjust the tooltip position as needed

            tooltip.style.top = positionTop + "px";
            tooltip.style.left = positionLeft + "px";

