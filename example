<script>
  document.querySelectorAll('.accordion-button').forEach(button => {
    button.addEventListener('click', () => {
      const currentlyExpanded = document.querySelector('.accordion-button:not(.collapsed)');
      if (currentlyExpanded && currentlyExpanded !== button) {
        currentlyExpanded.classList.add('collapsed');
        currentlyExpanded.setAttribute('aria-expanded', 'false');
        const currentlyExpandedPanel = document.querySelector(currentlyExpanded.dataset.bsTarget);
        currentlyExpandedPanel.classList.remove('show');
      }
    });
  });
</script>

