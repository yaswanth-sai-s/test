var currentTooltip;

        function showFullText(event, text) {
            hideFullText(); // Hide any open tooltip

            var tooltip = document.createElement("span");
            tooltip.textContent = stripHTMLTags(text);

            tooltip.style.position = "fixed";
            tooltip.style.backgroundColor = "#555";
            tooltip.style.color = "#fff";
            tooltip.style.textAlign = "center";
            tooltip.style.borderRadius = "6px";
            tooltip.style.padding = "5px";
            tooltip.style.opacity = "0";
            tooltip.style.transition = "opacity 0.3s";

            var positionTop = event.pageY - tooltip.offsetHeight - 10; // Show tooltip above the cursor
            var positionLeft = event.pageX + 10;

            // Calculate the position of the truncated text relative to the viewport
            var textRect = event.target.getBoundingClientRect();
            var textPositionTop = textRect.top + window.pageYOffset;
            var textPositionLeft = textRect.left + window.pageXOffset;

            // Adjust tooltip position based on the truncated text's position
            var tooltipTop = textPositionTop - tooltip.offsetHeight - 10;
            if (tooltipTop < 0) {
                tooltipTop = textPositionTop + textRect.height + 10;
            }
            var tooltipLeft = textPositionLeft + textRect.width / 2 - tooltip.offsetWidth / 2;
            if (tooltipLeft + tooltip.offsetWidth > window.innerWidth) {
                tooltipLeft = window.innerWidth - tooltip.offsetWidth - 10;
            }

            tooltip.style.top = tooltipTop + "px";
            tooltip.style.left = tooltipLeft + "px";

            document.body.appendChild(tooltip);

            // Set the tooltip to be visible
            setTimeout(function() {
                tooltip.style.opacity = "1";
            }, 1);

            // Store the current tooltip
            currentTooltip = tooltip;
        }

        function stripHTMLTags(html) {
            var tmp = document.createElement("div");
            tmp.innerHTML = html;
            return tmp.textContent || tmp.innerText || "";
        }

        function hideFullText() {
            if (currentTooltip) {
                // Set the tooltip to be hidden
                currentTooltip.style.opacity = "0";

                // Remove the tooltip after the transition
                setTimeout(function() {
                    currentTooltip.remove();
                }, 300);

                // Reset currentTooltip variable
                currentTooltip = null;
            }
        }
