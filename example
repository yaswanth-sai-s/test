        <th><button class="btn btn-primary collapsed" type="button" onclick="toggleAccordion('collapseOne', this)">+</button></th>
      </tr>
    </thead>
    <tbody>
      <tr id="header-extra" class="accordion-collapse">
        <th>Expanded 1</th>
