<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Accordion with Table</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Remove border lines from all tables */
    .table,
    .table td,
    .table th {
      border: none;
    }

    .accordion-collapse {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.5s ease-out;
    }

    .accordion-collapse.show {
      max-height: 1000px; /* Adjust to your preference */
    }

    .accordion-header button {
      transition: transform 0.3s ease-in-out;
    }

    .accordion-header button.collapsed {
      transform: rotate(180deg);
    }
  </style>
</head>
<body>

<div class="accordion accordion-flush" id="accordionFlushExample">
  <table class="table">
    {% for item in accordion_items %}
    <tr class="accordion-header" id="flush-heading{{ forloop.counter }}">
      {% for extra in item.extras %}
      <td>{{ extra }}</td>
      {% endfor %}
      <td>{{ item.title }}</td>
      <td><button class="btn btn-primary" type="button" onclick="toggleAccordion('collapse{{ forloop.counter }}', this)">
        +
      </button></td>
    </tr>
    <tr>
      <td colspan="5">
        <div id="collapse{{ forloop.counter }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ forloop.counter }}" data-bs-parent="#accordionFlushExample">
          <table class="table">
            {% for content_row in item.contents %}
            <tr>
              {% for content in content_row %}
              <td>{{ content }}</td>
              {% endfor %}
            </tr>
            {% endfor %}
          </table>
        </div>
      </td>
    </tr>
    {% endfor %}
  </table>
</div>

<script>
  function toggleAccordion(collapseId, button) {
    var collapseElement = document.getElementById(collapseId);
    var allCollapseElements = document.querySelectorAll('.accordion-collapse');
    
    allCollapseElements.forEach(function(item) {
      if (item.id !== collapseId) {
        item.classList.remove('show');
        item.style.maxHeight = null; // Reset max-height for smooth animation
      }
    });
    
    collapseElement.classList.toggle('show');
    
    var collapsed = button.classList.contains('collapsed');
    button.textContent = collapsed ? '+' : '-';
    button.classList.toggle('collapsed');
    
    // Set max-height to the actual height for smooth slide animation
    if (collapseElement.classList.contains('show')) {
      collapseElement.style.maxHeight = collapseElement.scrollHeight + 'px';
    } else {
      collapseElement.style.maxHeight = null; // Reset max-height when collapsing
    }
  }
</script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

data


from django.shortcuts import render

def my_view(request):
    accordion_items = [
        {
            'extras': ['Extra 1', 'Extra 2', 'Extra 3'],
            'title': 'Accordion Item #1',
            'contents': [
                ['Content 1', 'Content 2', 'Content 3', 'Content 4'],
                ['Content 5', 'Content 6', 'Content 7', 'Content 8']
            ]
        },
        # Add more accordion items as needed
    ]
    return render(request, 'accordion_template.html', {'accordion_items': accordion_items})





